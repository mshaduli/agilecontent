<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="TNE\OperatorBundle\Entity\AttractionRepository" name="TNE\OperatorBundle\Entity\Attraction">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="name" type="string" column="name" length="255" nullable="true"/>
    <field name="description" type="text" column="description" nullable="true"/>
    <field name="address" type="string" column="address" length="255" nullable="true"/>    
    <field name="destination" type="string" column="city_name" length="255" nullable="true"/>
    <field name="latitude" type="decimal" column="latitude" scale="7"/>
    <field name="longitude" type="decimal" column="longitude" scale="7"/>        
    
    <one-to-many field="media" target-entity="OperatorMedia" mapped-by="attraction">
        <cascade>
            <cascade-persist />
            <cascade-refresh />
            <cascade-remove />
        </cascade>        
    </one-to-many>    
    
    <many-to-many field="tags" inversed-by="attraction" target-entity="Application\Sonata\PageBundle\Entity\Tag">
        <join-table name="attraction_tags">
            <join-columns>
                <join-column name="attraction_id" referenced-column-name="id" nullable="true"/>
            </join-columns>
            <inverse-join-columns>
                <join-column name="tag_id" referenced-column-name="id"  nullable="true"/>
            </inverse-join-columns>
        </join-table>
    </many-to-many>       
    
  </entity>
</doctrine-mapping>
