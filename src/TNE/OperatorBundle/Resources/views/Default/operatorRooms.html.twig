                <div class="span5">
                  <div class="widget right-padding">
                    <ul class="op-rooms-date nav nav-collapse-phone collapse clearfix">
                      <li class="date-pick">
                      <div class="date-pick-label">In</div>
                        <div class="input-append">
                            <input class="span2 datepicker" id="start_date_{{ room.id }}" type="text" value="" placeholder="CHECK IN">
                        </div>
                      </li>
                      <li class="date-pick">
                      <div class="date-pick-label">Out</div>
                        <div class="input-append date-pick">
                          <input class="span2 datepicker" id="end_date_{{ room.id }}" type="text" value="" placeholder="CHECK OUT">
                        </div>
                      </li>
                    </ul>
                    <div class="op-rooms-details">
                      {{ room.description | raw}}
                    </div>
                    <div class="op-rooms-capacity">MAX. CAPACITY<span>2</span></div>
                    <a href="javascript:void(0)" class="btn btn-primary" id="a_room_{{ room.id }}"z><i class="icon-large icon-shopping-cart"></i>ADD TO CART</a>
