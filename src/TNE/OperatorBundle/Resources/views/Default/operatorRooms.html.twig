<a name="{{ room.id }}"></a>
<div class="hidden-phone" id="room_{{ room.id }}">
        <input type="hidden" value="{{ room.maxCapacity }}" id="max_capacity_{{ room.id }}">
            <div class="op-rooms">
              <div class="op-rooms-header">{{ room.name }}<span class="pull-right op-rooms-price">2 NIGHTS <em>$439</em></span></div>
