{% for link in links %}
    <li class="{% if link.items is defined %} {{ li_class }} {% endif %}" >
        <a class="{% if link.items is defined %} dropdown-toggle {% endif %} {{ link.classAttr }}" {% if link.items is defined %} data-toggle="dropdown" data-hover="dropdown" {% endif %} href="{%if link.pageId is empty %}#{% else %}{{ path(page(link.pageId)) }}{% endif %}">{{ link.name }}</a>
        {% if link.items is defined %}
             <ul class="dropdown-menu">
                {% include "ApplicationSonataPageBundle:Block:nav_item.html.twig" with {'links':link.items, 'li_class': 'dropdown-submenu' } only %}
            </ul>
        {% endif %}
    </li>
{% endfor %}
