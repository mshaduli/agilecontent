{% for link in links %}
    <li class="{% if link.items is defined %} parent collapsed {% endif %}" data-id="{{ link.id }}" data-name="{{ link.name }}"  data-class="{{ link.classAttr }}"  data-pageid="{{ link.pageId }}" >
        <a href="#" class="caption ui-droppable" rel="{{ link.id }}">{{ link.name }}</a>
        <span class="cmds">
            <span class="callback op1 icon-plus"></span> 
            <span class="callback op2 icon-pencil"></span>
            <span class="callback op3 icon-trash"></span>
	</span>
        {% if link.items is defined %}
            <ul style="display: none;">
                {% include "ApplicationSonataPageBundle:Block:menu_item.html.twig" with {'links':link.items} only %}
            </ul>
        {% endif %}
    </li>
{% endfor %}
